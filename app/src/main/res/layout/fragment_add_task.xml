<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bagga2.example.com.assignment1.Fragments.AddTask">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|top"
        android:background="#E3F2FD">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#00BAE3">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/taskField"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="What&apos;s on your mind?"
                android:textColorHint="#00BAE3"
                android:paddingLeft="20dp"
                android:background="#ffffff"
                android:textColor="#00Bae3"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/timePickerView"
            android:layout_below="@+id/linearLayout4"
            android:background="#ffffff"
            android:hint="What&apos;s the Time?"
            android:gravity="bottom"
            android:paddingLeft="20dp"
            android:textColor="#00BAE3"
            android:textColorHint="#00BAE3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="15sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/datePickerTextView"
            android:hint="What&apos;s the date?"
            android:gravity="bottom|left"
            android:background="#ffffff"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="20dp"
            android:textColor="#00BAE3"
            android:textColorHint="#00BAE3"
            android:textSize="15dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/datePickerTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#00BAE3"
            android:id="@+id/linearLayout4"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/timePickerView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#00BAE3"
            android:id="@+id/linearLayout5"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:id="@+id/linearLayout6">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PickDate"
                android:id="@+id/pickDateButton"
                android:layout_weight="1"
                android:background="#00BAE3"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick time"
                android:id="@+id/pickTime"
                android:layout_weight="1"
                android:background="#00BAE3"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout6"
            android:layout_alignLeft="@+id/linearLayout6"
            android:layout_alignStart="@+id/linearLayout6"
            android:gravity="center"
            android:layout_marginTop="90dp">

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/completeButton"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/noun_38945_cc" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
